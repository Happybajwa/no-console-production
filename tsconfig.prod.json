{
    "compilerOptions": {
      "target": "es6",
      "module": "es6",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "jsx": "react",
      "outDir": "./dist",
      "rootDir": "./src",
      "declaration": true,
      "declarationDir": "./dist"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }
