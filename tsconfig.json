    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "outDir": "./dist",
    "rootDir": "./playground"
  },
  "include": ["playground/**/*"],
  "exclude": ["node_modules", "dist"]
}
